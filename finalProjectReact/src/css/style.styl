body
  margin: 0
  padding: 0
  font-size: 18px
  font-family: sans-serif

$black = #000
$white = #fff
$colorFront = blue
$colorActive = red
$colorBackLight = #eee
$colorBackDark = #999

$headerHeight = 40px //not work with calc sn different units
$margin-vert = 20px
$margin-vert-small = 10px
$margin-horiz = 20px
$margin-horiz-small = 10px

//* HOME
.home 
  display: flex
  align-items: center
  justify-content: center
  text-align: center
  height: 100vh
  width: 100vw
  button
   margin: 20px 
   font-size: 1.6em
   padding: .5em 1em

.home-centred
  display: flex
  align-items: center
  text-align: center
  width: 80vw
  max-width: 800px
  flex-direction: column

//* SITE
.Site
  display: flex
  flex-direction: column
  align-items: center
.SiteFolder
  max-width: 800px
  ul
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: center 
    margin: 0
    padding: 0
.SiteFolder-item
  list-style: none
  width: 100px
  padding: 20px
  margin 10px
  font-size: .6em
  font-weight: bold
  text-transform: uppercase
  text-align: center
  cursor: pointer
  word-wrap: break-word
  &:hover
    background: $colorFront
.SiteFolder-item-folder
  background: $colorBackDark
  color: $white
.SiteFolder-item-file
  background: $colorBackLight 
.SiteFolder-item-back
  background: $colorBackDark
  color: $white
  display: flex
  flex-direction: column
  &::before
    content:"\00ab"
    margin-bottom: .2em
    font-size: 3em

// SiteFile
.siteFile
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  background: rgba(0,0,0,.75) 
.siteFile-menu
  display: flex
  justify-content: space-between
  height: 60px 
  align-items: center
  padding: 0 10px
.siteFile-preview
  position: absolute 
  width: 100vw
  height: calc(100vh - 60px)
  overflow: hidden

.siteFile-iframe,
.siteFile-image,
.siteFile-video
  position: absolute 
  top: 0
  left: 0
  right: 0
  height: 100% 
  border: none
  margin: 0 auto;
  display: block;
.siteFile-image,
.siteFile-video
  width: auto;
  max-width: 100%;
  height: auto;
  max-height: 100%;
.siteFile-iframe
  width: 100%

// transitions
.siteFile-preview-enter
  opacity: 0
  z-index: -1
  margin-top: 100vh
  transition-delay: 1s
  transition-duration: .3s
  transition-timing-function: ease-in
.siteFile-preview-enter-active
  opacity: 1
  margin-top: 0
.siteFile-preview-leave
  transition-duration: .2s
  transition-timing-function: ease-out
.siteFile-preview-leave-active
  opacity: 0
  top: 60px

.siteFolder-list-enter
  transition-duration: .2s
  transition-timing-function: ease-in
  transform: translateY(100px)
  opacity: 0
.siteFolder-list-enter-active
  transform: translateY(0)
  opacity: 1
.siteFolder-list-leave
  display: none
  transition-duration: .1s

  

//* ADMIN
.admin
  display: flex
  flex: 1
  min-height: 100vh
  justify-content: center


.AdminSites
  flex: 0 0 300px
  background-color: $colorBackLight
.AdminSites-user-menu
  display: flex
  justify-content: space-between
  height: 60px 
  align-items: center
  padding: 0 $margin-horiz
  background: $colorBackDark
  color: $white


.AdminSites-user-title
  margin-left: $margin-horiz
.AdminSites-user-sites
  padding: 0
  margin: 0 0 $margin-vert $margin-horiz 
  list-style: none
  border-top: 2px solid $colorBackDark
.AdminSites-user-sites-item
  border-bottom: 2px solid $colorBackDark
  padding: $margin-vert 0 $margin-vert $margin-horiz 
  &:hover
    background: $colorBackDark
    color: $white
.AdminSites-user-sites-item-selected
  background: $white
  border-left: 10px solid $colorBackDark
.AdminSites-addWeb.button
  background: $colorBackDark
  color: $white
  margin: $margin-vert $margin-horiz 

.AdminSite-info
  flex: 1
  max-width: 500px
  background-color: $white
.AdminSite-info-menu
  display: flex
  justify-content: flex-end 
  height: 60px 
  align-items: center
  padding: 0 $margin-horiz
.AdminSite-info-form
  margin: $margin-horiz $margin-vert
.AdminSite-info-form-item-title
  font-size: 22px
  clear: both
  display: block
  margin: $margin-vert 0 $margin-vert-small 0
.AdminSite-info-form-row
  display: flex
  align: center
.AdminSite-info-form-input
  flex-grow: 1
  flex-shrink: 1
  min-width: 30px
  font-size: 16px
  border: 4px solid $colorBackDark
  padding: $margin-vert-small
.AdminSite-info-form-grey
  font-weight: bold
  color: $colorBackDark
  margin-right: .5em
  font-size: 16px
  padding-top: $margin-vert-small + 4px
  padding-bottom: $margin-vert-small + 4px
.AdminSite-info-form-row .button
  background: $colorBackDark
  color: $white

@media screen and (max-width: 480px)
  .admin
    flex-direction: column
  .AdminSites
    flex: 0

// Butons
.button
  color: #000
  text-decoration: none
  background: $colorBackLight
  padding: .5em 1em
  border: none
  font-size: 16px
  font-weight: bold
  cursor: pointer
  &:hover
    background: $colorFront
    color: $white

.button-close
  &::before
    content: '\00d7'


