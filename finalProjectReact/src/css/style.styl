body
  margin: 0
  padding: 0
  font-size: 18px
  font-family: sans-serif


//* HOME
.home 
  display: flex
  align-items: center
  justify-content: center
  text-align: center
  height: 100vh
  width: 100vw
  button
   margin: 20px 
   font-size: 1.6em
   padding: .5em 1em

.home-centred
  display: flex
  align-items: center
  text-align: center
  width: 80vw
  max-width: 800px
  flex-direction: column

//* SITE
.Site
  display: flex
  flex-direction: column
  align-items: center
.SiteFolder
  max-width: 800px
  ul
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: center
    margin: 0
    padding: 0
.SiteFolder-item
  background: yellow
  list-style: none
  padding: 2em
  margin .5em
  

//* ADMIN
.admin
  display: flex
  flex: 1
  min-height: 100vh
  justify-content: center

.AdminSites
  flex: 0 0 300px
  background-color: blue

.AdminSiteInfo
  flex: 1
  max-width: 700px
  background-color: yellow

@media screen and (max-width: 480px)
  .admin
    flex-direction: column
  .AdminSites
    flex: 0
